package com.javaex1;

class Stringrev {
	
	String meth(String s)
	{
		if(s==null || s.length()<=1)
		{
			return s;
		}
		else 
		{
			return meth(s.substring(1))+s.charAt(0);
		}
	}

	public static void main(String[] args) {
		
		Stringrev obj= new Stringrev();
		String str = "Krish";
		System.out.println(obj.meth(str));
		
	}
}
